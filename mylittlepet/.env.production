# Production Environment Configuration

# API Configuration
REACT_APP_API_URL=https://api.mylittlepet.com/api
REACT_APP_API_TIMEOUT=30000

# Authentication Configuration
REACT_APP_JWT_SECRET=your_production_jwt_secret_here
REACT_APP_TOKEN_EXPIRY=86400000

# Application Configuration
REACT_APP_NAME=My Little Pet
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Feature Flags
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_CACHE=true
REACT_APP_CACHE_TIMEOUT=300000

# UI Configuration
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100
REACT_APP_PAGINATION_DISPLAY_RANGE=5

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Debugging
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=error
